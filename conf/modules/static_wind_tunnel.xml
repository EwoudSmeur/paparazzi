<!DOCTYPE module SYSTEM "module.dtd">

<module name="static_wind_tunnel" dir="ctrl">
  <doc>
    <description>
        Wind tunnel module that sets the actuators to predefined values
    </description>

    <section name="WINDTUNNEL" prefix="STATIC_WIND_TUNNEL_">
      <define name="MEASUREMENT_TIME" value="10.0" description="Time to measure each conidion [seconds]"/>
    </section>


  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="WindtunnelCtrl">
        <dl_setting var="wt_data.measurement_time" min="1.0" step="0.1" max="60.0" module="ctrl/static_wind_tunnel" shortname="meas_time" param="STATIC_WIND_TUNNEL_MEASUREMENT_TIME"/>
        <dl_setting var="wt_data.run" min="0" step="1" max="1" values="START|STOP" module="ctrl/static_wind_tunnel" shortname="run"/>
      </dl_settings>
    </dl_settings>
  </settings>

  <header>
    <file name="static_wind_tunnel.h"/>
  </header>

  <!-- <define name="STATIC_WIND_TUNNEL_FREQUENCY" value="100.0"/> -->

  <periodic fun="wt_run()"  autorun="TRUE" freq="STATIC_WIND_TUNNEL_FREQUENCY" />

  <makefile>
    <file name="static_wind_tunnel.c"/>
    <configure name="STATIC_WIND_TUNNEL_FREQUENCY" default="100"/>
    <define name="STATIC_WIND_TUNNEL_FREQUENCY" value="$(STATIC_WIND_TUNNEL_FREQUENCY)"/>
  </makefile>

</module>

